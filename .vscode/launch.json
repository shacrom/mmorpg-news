{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Astro Dev Server",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "console": "integratedTerminal",
      "restart": true,
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "sourceMaps": true,
      "smartStep": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "command": "./node_modules/.bin/astro dev",
      "name": "Development server (simple)",
      "request": "launch",
      "type": "node-terminal"
    }
  ]
}
