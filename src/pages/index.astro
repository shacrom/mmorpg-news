          <h3 class="text-xl font-bold text-purple-400 mb-4">üî• Trending</h3>
          <div class="space-y-4">
            {trendingNews.map((item, index) => (
              <div class="flex items-start space-x-3 group cursor-pointer">
                <div class="flex-shrink-0 w-6 h-6 bg-gradient-to-r from-purple-600 to-pink-600 rounded-full flex items-center justify-center text-white text-sm font-bold">
                  {index + 1}
                </div>
                <p class="text-white text-sm leading-relaxed group-hover:text-purple-300 transition-colors">
                  {item}
                </p>
              </div>
            ))}
          </div>
        </div>

        <!-- Popular Games -->
        <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-6">
          <h3 class="text-xl font-bold text-pink-400 mb-4">üéÆ Juegos Populares</h3>
          <div class="space-y-3">
            {popularGames.map((game) => (
              <div class="flex items-center space-x-3 p-3 rounded-lg hover:bg-white/5 transition-colors cursor-pointer">
                <div class="text-2xl">{game.icon}</div>
                <div class="flex-1">
