            <div class="absolute bottom-0 p-4">
              <div class="flex space-x-2 mb-2">
                <span class="px-2 py-1 bg-blue-600 text-white text-xs rounded">{featuredNews[1].category}</span>
              </div>
              <h3 class="text-lg font-bold text-white mb-2 leading-tight">{featuredNews[1].title}</h3>
              <span class="text-gray-400 text-sm">{featuredNews[1].date}</span>
            </div>
          </div>
        </article>
      </div>
    </section>

    <!-- Main Layout: Content + Sidebar -->
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      
      <!-- Main Content Area -->
      <section class="lg:col-span-3">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-bold text-white">√öltimas Noticias</h2>
          <a href="/noticias" class="text-purple-400 hover:text-purple-300 font-medium">Ver todas ‚Üí</a>
        </div>
        
        <!-- News Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {latestNews.map((article, index) => (
            <article class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl overflow-hidden hover:bg-white/10 transition-all duration-300 group cursor-pointer">
              <div class="relative">
                <img 
                  src={article.image} 
                  alt={article.title}
                  class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-105"
                />
                <div class="absolute top-3 left-3">
                  <span class="px-2 py-1 bg-purple-600/80 backdrop-blur-sm text-white text-xs rounded">
                    {article.category}
                  </span>
                </div>
              </div>
              <div class="p-5">
                <h3 class="text-lg font-semibold text-white mb-3 line-clamp-2 group-hover:text-purple-300 transition-colors">
                  {article.title}
                </h3>
                <div class="flex items-center justify-between text-sm text-gray-400">
                  <span>{article.date}</span>
                  <span>Por MMORPG News</span>
                </div>
              </div>
            </article>
          ))}
        </div>
      </section>

      <!-- Sidebar -->
      <aside class="space-y-8">
        
        <!-- Trending Section -->
