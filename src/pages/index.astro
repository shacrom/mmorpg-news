            <div class="absolute bottom-0 p-6">
              <div class="flex space-x-2 mb-3">
                <span class="px-2 py-1 bg-purple-600 text-white text-xs rounded">{featuredNews[0].category}</span>
                <span class="px-2 py-1 bg-pink-600 text-white text-xs rounded">{featuredNews[0].platform}</span>
              </div>
              <h2 class="text-2xl font-bold text-white mb-2 leading-tight">{featuredNews[0].title}</h2>
              <p class="text-gray-200 mb-3">{featuredNews[0].excerpt}</p>
              <span class="text-gray-400 text-sm">{featuredNews[0].date}</span>
            </div>
          </div>
        </article>
        
        <!-- Secondary Featured -->
        <article class="relative rounded-xl overflow-hidden group cursor-pointer">
          <img 
            src={featuredNews[1].image} 
            alt={featuredNews[1].title}
            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
          />
