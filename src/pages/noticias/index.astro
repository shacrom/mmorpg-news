---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { formatPublishedDate, getImageUrl } from '../../services/strapi';
import { any } from 'astro:schema';

const STRAPI_URL = import.meta.env.STRAPI_URL || 'http://localhost:1337';
const token = Astro.cookies.get('strapi_jwt')?.value;

async function fetchNoticias() {
  if (!token) {
    console.error('No se pudo obtener el token de Strapi desde la cookie');
    return [];
  }

  try {
    const url = `${STRAPI_URL}/news`;
    
    console.log('[Noticias] Fetching desde:', url);
    
    const response = await fetch(url, {
      headers: {
        'Authorization': `Bearer ${token}`,
        'Content-Type': 'application/json'
      }
    });

    console.log('[Noticias] Response status:', response.status);

    if (!response.ok) {
      const errorText = await response.text();
      console.error('[Noticias] Error response:', {
        status: response.status,
        statusText: response.statusText,
        body: errorText
      });
      throw new Error(`HTTP ${response.status}: ${response.statusText}`);
    }

    const data = await response.json();
    return data || [];
  } catch (error) {
    console.error('Error obteniendo noticias:', error);
    return [];
  }
}

const posts = await fetchNoticias();

const latestNews = posts.map((post: any) => ({
  id: post.id,
  title: post.title,
  summary: post.summary,
  publishedAt: post.publishedAt,
  category: post.category,
  image: post.image
}));
---

<Layout>
  <Header />

  <!-- Main Content -->
  <main class="container mx-auto px-4 md:px-6 lg:px-8 xl:px-12 2xl:px-16 py-8 max-w-[1400px]">
    
    <!-- Page Title -->
    <div class="mb-8">
      <h1 class="text-4xl font-bold bg-gradient-to-r from-purple-400 via-pink-400 to-blue-400 bg-clip-text text-transparent mb-2">
        Noticias MMORPG
      </h1>
    </div>
    
 

    <!-- Main Layout: Content + Sidebar -->
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      
      <!-- Main Content Area -->
      <section class="lg:col-span-3">
        
        <!-- News Grid -->
        {latestNews.length === 0 ? (
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-lg p-12 text-center">
            <p class="text-gray-400 text-lg">No hay noticias disponibles en este momento.</p>
            <p class="text-gray-500 text-sm mt-2">Vuelve pronto para ver las últimas novedades del mundo MMORPG.</p>
          </div>
        ) : (
          <div class="flex flex-col gap-4">
            {latestNews.map((post: any) => {
              return (
                <article class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-lg overflow-hidden hover:bg-white/10 transition-all duration-300 group cursor-pointer">
                  <div class="flex flex-col sm:flex-row">
                    <!-- Imagen a la izquierda -->
                    <div class="relative sm:w-64 sm:flex-shrink-0">
                      <img 
                        src={getImageUrl(post)} 
                        alt={post.title}
                        class="w-full h-48 sm:h-full object-cover transition-transform duration-300 group-hover:scale-105"
                      />
                      <div class="absolute top-3 left-3">
                        <span class="px-2 py-1 bg-purple-600/90 backdrop-blur-sm text-white text-xs rounded font-medium">
                          {post.category || 'Noticias'}
                        </span>
                      </div>
                    </div>
                    
                    <!-- Contenido a la derecha -->
                    <div class="flex flex-col justify-between p-5 flex-1">
                      <div>
                        <h3 class="text-lg md:text-xl font-bold text-white mb-2 line-clamp-2 group-hover:text-purple-300 transition-colors leading-tight">
                          {post.title}
                        </h3>
                        {post.summary && (
                          <p class="text-gray-400 text-sm line-clamp-2 mt-2">
                            {post.summary}
                          </p>
                        )}
                      </div>
                      
                      <div class="flex items-center justify-between text-sm text-gray-400 mt-auto pt-3">
                        <span class="font-medium">{formatPublishedDate(post.publishedAt)}</span>
                        <span class="text-gray-500">Por Zona Gamer</span>
                      </div>
                    </div>
                  </div>
                </article>
              );
            })}
          </div>
        )}
        
        <!-- Load More Button -->
        <div class="mt-8 text-center">
          <button class="px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-lg font-medium hover:from-purple-700 hover:to-pink-700 transition-all">
            Cargar más noticias
          </button>
        </div>
      </section>
    </div>
  </main>

  <Footer />
</Layout>