---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const latestNews = [
  {
    title: "Guild Wars 2 anuncia evento de Halloween con mazmorras temporales y recompensas exclusivas",
    category: "Eventos",
    date: "Hace 1 hora",
    image: "https://images.unsplash.com/photo-1578662996442-48f60103fc96?w=300&h=200&fit=crop"
  },
  {
    title: "Elder Scrolls Online: High Isle recibe actualización gratuita con nuevas zonas",
    category: "Actualizaciones", 
    date: "Hace 3 horas",
    image: "https://images.unsplash.com/photo-1518709268805-4e9042af2176?w=300&h=200&fit=crop"
  },
  {
    title: "Lost Ark: Nuevas clases de combate llegarán en la próxima temporada 2025",
    category: "Noticias",
    date: "Hace 5 horas", 
    image: "https://images.unsplash.com/photo-1560253023-3ec5d502959f?w=300&h=200&fit=crop"
  },
  {
    title: "New World presenta su ambiciosa hoja de ruta para el año 2025",
    category: "Roadmap",
    date: "Hace 6 horas",
    image: "https://images.unsplash.com/photo-1535223289827-42f1e9919769?w=300&h=200&fit=crop"
  }
];
---

<Layout>
  <Header />

  <!-- Main Content -->
  <main class="container mx-auto px-4 md:px-6 lg:px-8 xl:px-12 2xl:px-16 py-8 max-w-[1400px]">
    
    <!-- Page Title -->
    <div class="mb-8">
      <h1 class="text-4xl font-bold bg-gradient-to-r from-purple-400 via-pink-400 to-blue-400 bg-clip-text text-transparent mb-2">
        Noticias MMORPG
      </h1>
    </div>
    
 

    <!-- Main Layout: Content + Sidebar -->
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      
      <!-- Main Content Area -->
      <section class="lg:col-span-3">
        
        <!-- News Grid -->
        <div class="flex flex-col gap-4">
          {latestNews.map((article, index) => (
            <article class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-lg overflow-hidden hover:bg-white/10 transition-all duration-300 group cursor-pointer">
              <div class="flex flex-col sm:flex-row">
                <!-- Imagen a la izquierda -->
                <div class="relative sm:w-64 sm:flex-shrink-0">
                  <img 
                    src={article.image} 
                    alt={article.title}
                    class="w-full h-48 sm:h-full object-cover transition-transform duration-300 group-hover:scale-105"
                  />
                  <div class="absolute top-3 left-3">
                    <span class="px-2 py-1 bg-purple-600/90 backdrop-blur-sm text-white text-xs rounded font-medium">
                      {article.category}
                    </span>
                  </div>
                </div>
                
                <!-- Contenido a la derecha -->
                <div class="flex flex-col justify-between p-5 flex-1">
                  <div>
                    <h3 class="text-lg md:text-xl font-bold text-white mb-2 line-clamp-2 group-hover:text-purple-300 transition-colors leading-tight">
                      {article.title}
                    </h3>
                  </div>
                  
                  <div class="flex items-center justify-between text-sm text-gray-400 mt-auto pt-3">
                    <span class="font-medium">{article.date}</span>
                    <span class="text-gray-500">Por Zona Gamer</span>
                  </div>
                </div>
              </div>
            </article>
          ))}
        </div>
        
        <!-- Load More Button -->
        <div class="mt-8 text-center">
          <button class="px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-lg font-medium hover:from-purple-700 hover:to-pink-700 transition-all">
            Cargar más noticias
          </button>
        </div>
      </section>
    </div>
  </main>

  <Footer />
</Layout>