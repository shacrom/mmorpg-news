---
/**
 * Componente Header - Navegación principal del sitio responsive
 * Incluye logo, búsqueda, navegación y menú móvil desplegable
 */
---

<header class="bg-black/50 backdrop-blur-sm border-b border-purple-500/30 sticky top-0 z-50">
  <div class="container mx-auto px-4">
    <!-- Top Bar -->
    <div class="flex items-center justify-between py-4">
      <!-- Mobile Menu Button (Solo móvil) -->
      <button 
        id="mobile-menu-btn"
        class="md:hidden px-3 py-2 bg-purple-600 text-white rounded flex items-center hover:bg-purple-700 transition-colors"
        aria-label="Abrir menú de navegación"
      >
        <span class="text-lg">☰</span>
      </button>

      <!-- Logo -->
      <div class="flex items-center space-x-2">
        <a href="/" class="flex items-center space-x-2">
          <h1 class="text-xl md:text-2xl font-bold bg-gradient-to-r from-purple-400 via-pink-400 to-blue-400 bg-clip-text text-transparent">
            Zona Gamer
          </h1>
        </a>
      </div>
      
      <!-- Desktop Navigation Menu (Centro) -->
      <nav class="hidden md:flex flex-1 justify-center">
        <div class="flex space-x-8">
          <a href="/noticias" class="text-white hover:text-purple-400 transition-colors font-medium">Noticias</a>
          <a href="/analisis" class="text-white hover:text-purple-400 transition-colors font-medium">Análisis</a>
          <a href="/guias" class="text-white hover:text-purple-400 transition-colors font-medium">Guías</a>
          <a href="/reviews" class="text-white hover:text-purple-400 transition-colors font-medium">Reviews</a>
          <a href="/eventos" class="text-white hover:text-purple-400 transition-colors font-medium">Eventos</a>
        </div>
      </nav>
      
      <!-- Right Section: Platform Icons + User Actions -->
      <div class="flex items-center space-x-4">
       
        
        <!-- User Actions -->
        <button class="hidden sm:block px-4 md:px-6 py-2 bg-gradient-to-r from-purple-600 to-pink-600 rounded-full text-white text-sm md:text-base font-medium hover:from-purple-700 hover:to-pink-700 transition-all">
          <span class="hidden md:inline">Entrar • Registrarse</span>
          <span class="md:hidden">Entrar</span>
        </button>
      </div>
    </div>

    <!-- Mobile Dropdown Menu (Solo móvil) -->
    <div 
      id="mobile-menu" 
      class="md:hidden overflow-hidden bg-black/95 backdrop-blur-lg border-b border-purple-500/30 transition-all duration-300 ease-in-out"
      style="max-height: 0;"
    >
      <nav class="px-4 py-4 space-y-2">
        <a href="/noticias" class="block px-4 py-3 text-white hover:text-purple-400 hover:bg-white/10 rounded-lg transition-all font-medium">
          Noticias
        </a>
        <a href="/analisis" class="block px-4 py-3 text-white hover:text-purple-400 hover:bg-white/10 rounded-lg transition-all font-medium">
          Análisis
        </a>
        <a href="/guias" class="block px-4 py-3 text-white hover:text-purple-400 hover:bg-white/10 rounded-lg transition-all font-medium">
          Guías
        </a>
        <a href="/reviews" class="block px-4 py-3 text-white hover:text-purple-400 hover:bg-white/10 rounded-lg transition-all font-medium">
          Reviews
        </a>
        <a href="/eventos" class="block px-4 py-3 text-white hover:text-purple-400 hover:bg-white/10 rounded-lg transition-all font-medium">
          Eventos
        </a>
      </nav>
    </div>
  </div>
</header>

<!-- JavaScript para el menú móvil -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    let isMenuOpen = false;

    if (mobileMenuBtn && mobileMenu) {
      mobileMenuBtn.addEventListener('click', function() {
        isMenuOpen = !isMenuOpen;
        
        if (isMenuOpen) {
          // Expandir menú dropdown
          mobileMenu.style.maxHeight = '300px'; // Suficiente para 5 enlaces
          
          // Cambiar icono del botón
          mobileMenuBtn.innerHTML = '<span class="text-lg">✕</span>';
          mobileMenuBtn.setAttribute('aria-label', 'Cerrar menú de navegación');
        } else {
          // Colapsar menú dropdown
          mobileMenu.style.maxHeight = '0';
          
          // Cambiar icono del botón
          mobileMenuBtn.innerHTML = '<span class="text-lg">☰</span>';
          mobileMenuBtn.setAttribute('aria-label', 'Abrir menú de navegación');
        }
      });

      // Cerrar menú al hacer clic en los enlaces
      const menuLinks = mobileMenu.querySelectorAll('a');
      menuLinks.forEach(link => {
        link.addEventListener('click', () => {
          if (isMenuOpen) {
            isMenuOpen = false;
            mobileMenu.style.maxHeight = '0';
            mobileMenuBtn.innerHTML = '<span class="text-lg">☰</span>';
            mobileMenuBtn.setAttribute('aria-label', 'Abrir menú de navegación');
          }
        });
      });

      // Cerrar menú al redimensionar la ventana (cuando pasa a desktop)
      window.addEventListener('resize', () => {
        if (window.innerWidth >= 768 && isMenuOpen) {
          isMenuOpen = false;
          mobileMenu.style.maxHeight = '0';
          mobileMenuBtn.innerHTML = '<span class="text-lg">☰</span>';
          mobileMenuBtn.setAttribute('aria-label', 'Abrir menú de navegación');
        }
      });
    }
  });
</script>